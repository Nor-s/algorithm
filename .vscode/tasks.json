{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: build active file",
			"command": "g++",
			"args" : [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/a.exe",
				"-std=c++17"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind" : "build",
				"isDefault":true 
			},
			"detail": "compileer: g++"
		}
	]
}